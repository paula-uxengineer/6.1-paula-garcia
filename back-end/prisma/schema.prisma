generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Player {
  id            Int @id @default(autoincrement())
  name          String
  creationDate  DateTime @default(now())
  successRate   Float?
  throws        Throw[]
}

model Throw {
  id            Int @id @default(autoincrement())
  dice1         Int
  dice2         Int
  winner        Boolean
  player        Player @relation(fields: [playerId], references: [id])
  playerId      Int
}