{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonJS",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./_dist",
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "removeComments": true,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"],
    "paths": {
      "*": ["./src/*"]
    }
  },

  "include": ["./src/**/*", "./generated/**/*", "express.d.ts", "./src/_test/**/*.ts"],
  "exclude": ["node_modules", "dist", "prisma/generated", "prisma/migrations"]
}
